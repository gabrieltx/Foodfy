{% extends "admin-layout.njk" %}

{% block content %}
<h1 class="admin-title">Manage Recipes</h1>
<a href="/admin/recipes/create">New Recipe</a>

<div class="admin-cards">  

    {% for item in items %}
        <div class="admin-card" id="{{item.title}}">
            <img src={{item.image}} alt={{item.title}}>
            <div class="card-content">
                <div class="recipeTitle">
                    <p id="recipeTitle">{{item.title}}</p>
                    <p>index: {{item.index}}</p>
                </div>
                <div class="recipeOwner">
                    <p id="recipeOwner">by {{item.author}}</p>
                </div>
                <a class="view" href="/admin/recipes/{{index}}">View</a>
            </div>
        </div>
    {% endfor %}

</div>

{% endblock %}
