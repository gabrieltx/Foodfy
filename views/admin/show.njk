{% extends "admin-layout.njk" %}
{% block content %}



<div class="create">
    <h2>Recipe: {{recipe.title}}</h2>
    <a href="/admin/recipes/{{recipe.id}}/edit">Edit</a>
</div>


<div class="detailImg">
    <img src={{recipe.image}} alt="{{recipe.title}}">
</div>

<div class="detailTitle">
    <h1>{{recipe.title}}</h1>
    <h2>by {{recipe.author}}</h2>
</div>

<div class="details">
    <div class="subTitles">
        <h1>Ingredients</h1>
    </div>

    <div class="recipeContent">
        <div class="ingredients">
            <ul>
                {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

<div class="details">
    <div class="subTitles">
        <h1>Preparation</h1>
    </div>

    <div class="recipeContent">
        <div class="preparation">
            <ul>
                {% for item in recipe.preparation%}
                <li>{{item}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

<div class="details">
    <div class="subTitles">
        <h1>Additional information</h1>
    </div>

    <div class="recipeContent">
        <div class="information">
            <p>{{recipe.information}}</p>
        </div>
    </div>
</div>

{% endblock %}