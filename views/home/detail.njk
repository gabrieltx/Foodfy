{% extends "layout.njk" %}

{% block title %}
    <title>Foodfy - {{recipe.title}}</title>
{% endblock %}

{% block content %}

<div class="detailImg">
    <img src={{recipe.image}} alt="{{recipe.title}}">
</div>

<div class="detailTitle">
    <h1>{{recipe.title}}</h1>
    <h2>by {{recipe.author}}</h2>
</div>

<div class="details">
    <div class="subTitles">
        <h1>Ingredients</h1>
        <a>Show</a>
    </div>

    <div class="recipeContent hidden">
        <div class="ingredients">
            <ul>
                {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

<div class="details">
    <div class="subTitles">
        <h1>Preparation</h1>
        <a>Show</a>
    </div>

    <div class="recipeContent hidden">
        <div class="preparation">
            <ul>
                {% for item in recipe.preparation%}
                <li>{{item}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

<div class="details">
    <div class="subTitles">
        <h1>Additional information</h1>
        <a>Show</a>
    </div>

    <div class="recipeContent hidden">
        <div class="information">
            <p>{{recipe.information}}</p>
        </div>
    </div>
</div>

{% endblock %}