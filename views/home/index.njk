{% extends "layout.njk" %}

{% block content %}

<div class="banner">
    <div class="bannerImg">
        <img src="assets/chef.png" alt="">
    </div>
    <div class="bannerText">
        <h1>
            The best recipes!
        </h1>
        <p>
            Learn how to prepare the best dishes with recipes by chefs around the world
        </p>
    </div>
</div>

<div class="content">
    <p>Most viewed</p>
</div>

<div class="cards">

    {% for item in items %}
    <div class="card" id="{{item.id}}">
        <img src={{item.image}} alt={{item.title}}>
        <div class="recipeTitle">
            <p id="recipeTitle">{{item.title}}</p>
        </div>
        <div class="recipeOwner">
            <p id="recipeOwner">by {{item.author}}</p>
        </div>
    </div>
    {% endfor %}
   
</div>

{% endblock %}

