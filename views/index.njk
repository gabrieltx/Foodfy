{% extends "layout.njk" %}

{% block content %}

<div class="banner">
    <div class="bannerImg">
        <img src="assets/chef.png" alt="">
    </div>
    <div class="bannerText">
        <h1>
            The best recipes!
        </h1>
        <p>
            Learn how to prepare the best dishes with recipes by chefs around the world
        </p>
    </div>
</div>

<div class="content">
    <p>Most viewed</p>
</div>

<div class="cards">

    <div class="card" id="burger">
        <img src="assets/burger.png" alt="triple bacon burguer">
        <div class="recipeTitle">
            <p id="recipeTitle">Triple Bacon Burguer</p>
        </div>
        <div class="recipeOwner">
            <p id="recipeOwner">by Jorge Renato</p>
        </div>
    </div>
    <div class="card" id="pizza">
        <img src="assets/pizza.png" alt="Pizza">
        <div class="recipeTitle">
            <p id="recipeTitle">4 Seasons Pizza</p>
        </div>
        <div class="recipeOwner">
            <p id="recipeOwner">by Joe Fields</p>
        </div>
    </div>
    <div class="card" id="pasta">
        <img src="assets/pasta.png" alt="Spaguetti">
        <div class="recipeTitle">
            <p id="recipeTitle">Classic Spaguetti</p>
        </div>
        <div class="recipeOwner">
            <p id="recipeOwner">by Lisa Roberts</p>
        </div>
    </div>
    <div class="card" id="lasagna">
        <img src="assets/lasagna.png" alt="lasagna">
        <div class="recipeTitle">
            <p id="recipeTitle">Mac n Cheese Lasagna</p>
        </div>
        <div class="recipeOwner">
            <p id="recipeOwner">by Gia Lauredo</p>
        </div>
    </div>
    <div class="card" id="truffle">
        <img src="assets/truffle.png" alt="truffle">
        <div class="recipeTitle">
            <p id="recipeTitle">Chocolate Truffles</p>
        </div>
        <div class="recipeOwner">
            <p id="recipeOwner">by Daniel Ramirez</p>
        </div>
    </div>
    <div class="card" id="wings">
        <img src="assets/wings.png" alt="Buffalo Wings">
        <div class="recipeTitle">
            <p id="recipeTitle">Buffalo Wings</p>
        </div>
        <div class="recipeOwner">
            <p id="recipeOwner">by Ted Johnson</p>
        </div>
    </div>   
</div>

{% endblock %}